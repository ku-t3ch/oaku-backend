{
  "name": "oaku_backend",
  "version": "1.0.0",
  "description": "OAKU Backend API - University Activity Management System",
  "license": "ISC",
  "author": "",
  "type": "commonjs",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --exec tsx server.ts",
    "start": "node dist/server.js",
    "build": "tsc",
    "build:clean": "rm -rf dist && npm run build",
    "build:watch": "tsc --watch",
    "docker:build": "docker-compose build --no-cache",
    "docker:up": "docker-compose up -d postgres",
    "docker:up:all": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:clean": "docker-compose down -v && docker system prune -f",
    "docker:restart": "npm run docker:down && npm run docker:up:all",
    "docker:logs": "docker-compose logs -f",
    "docker:logs:db": "docker-compose logs -f postgres",
    "docker:logs:backend": "docker-compose logs -f backend",
    "setup": "npm run docker:clean && npm run docker:up && sleep 15 && npm run db:push && npm run db:seed",
    "setup:dev": "npm install && npm run build && npm run db:reset && npm run db:seed",
    "setup:first": "npm install && npm run docker:up && sleep 10 && npm run db:push && npm run db:seed",
    "db:push": "npx prisma db push",
    "db:reset": "npx prisma db push --force-reset",
    "db:seed": "npx prisma db seed",
    "db:studio": "npx prisma studio",
    "db:migrate": "npx prisma migrate dev",
    "db:migrate:reset": "npx prisma migrate reset",
    "db:generate": "npx prisma generate",
    "db:format": "npx prisma format",
    "db:deploy": "npx prisma migrate deploy",
    "clean": "rm -rf dist node_modules package-lock.json",
    "clean:install": "npm run clean && npm install",
    "typecheck": "tsc --noEmit",
    "lint": "echo \"ESLint not configured yet\"",
    "test": "echo \"Tests not configured yet\"",
    "prebuild": "npm run typecheck",
    "postinstall": "npx prisma generate"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.10.1",
    "axios": "^1.10.0",
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.0.1",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "nodemon": "^3.1.10",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "passport-oauth2": "^1.8.0",
    "path-to-regexp": "^6.2.1",
    "pg": "^8.16.3",
    "swagger-ui-express": "^5.0.1",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.19.4",
    "@types/passport": "^1.0.17",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/passport-jwt": "^4.0.1",
    "@types/pg": "^8.15.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/yamljs": "^0.2.34",
    "prisma": "^6.10.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  }
}
